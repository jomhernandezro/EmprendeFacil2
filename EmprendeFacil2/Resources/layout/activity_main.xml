<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/title_home"
        android:textSize="60px" />


    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_marginLeft="@dimen/activity_horizontal_margin2"
        android:layout_marginStart="@dimen/activity_horizontal_margin2"
        android:layout_marginTop="@dimen/activity_vertical_margin2"
        android:text="@string/title_nombre"
        android:inputType="text"
        android:visibility="invisible" 
        />

    <EditText
        android:id="@+id/editTextDireccion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_marginLeft="@dimen/activity_horizontal_margin2"
        android:layout_marginStart="@dimen/activity_horizontal_margin2"
        android:layout_marginTop="@dimen/activity_vertical_marginTop"
        android:text="@string/title_direccion"
        android:inputType="text"
        android:visibility="invisible" 
        />

    <EditText
        android:id="@+id/editTextCiudad"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_marginLeft="@dimen/activity_horizontal_margin2"
        android:layout_marginStart="@dimen/activity_horizontal_margin2"
        android:layout_marginTop="@dimen/activity_vertical_marginTop2"
        android:text="@string/title_ciudad"
        android:inputType="text"
        android:visibility="invisible" 
        />

    <EditText
        android:id="@+id/editTextDocumento"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_marginLeft="@dimen/activity_horizontal_margin2"
        android:layout_marginStart="@dimen/activity_horizontal_margin2"
        android:layout_marginTop="@dimen/activity_vertical_marginTop3"
        android:text="@string/title_documento"
        android:inputType="text"
        android:visibility="invisible" 
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation" />

</RelativeLayout>
